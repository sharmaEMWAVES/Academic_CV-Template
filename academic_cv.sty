%%%%%%%%%%%%%%% Section and Subsection %%%%%%%%%%%%%%%%%%%%
\newcommand{\cvsection}[1]{\begin{flushleft}
		\Large\textcolor{cvsec}{\textbf{#1}}
  \end{flushleft}
}
\newcommand{\cvsubsection}[1]{
\begin{flushleft}
		\normalsize\textcolor{cvsubsec}{\textbf{#1}}
\end{flushleft}
}
%%%%%%%%%%%%%%% CV Item 3  %%%%%%%%%%%%%%%%%%%%%%
\newcommand{\cvitem}[3]{\begin{tabularx}{\textwidth}{X p{3.5cm}}\textbf{{#2}} -- {#3} & \RaggedLeft{#1}
    \end{tabularx}
}

%%%%%%%%%%%%%%%%% Awards %%%%%%%%%%%%%%%%%%%%%%
\newcommand{\cvitemmod}[2]{\begin{tabularx}{\textwidth}{X p{1cm}} {#2} & \RaggedLeft{#1}
    \end{tabularx}
}
%%%%%%%%%%%%%%% Volunteer and Professional Activities %%%%%%%%%
\newcommand{\cvpro}[2]{\textbf{#1} -- {#2}}
%%%%%%%%%%%%%%%%% Reviewers %%%%%%%%%%%%%%%%%%%
\newcommand{\cvrevj}[2]{\textbf{{#1}} -- {#2}}
\newcommand{\cvrevc}[2]{\begin{tabularx}{\textwidth}{X p{1cm}} {#2} & \RaggedLeft{#1}
    \end{tabularx}
}
%%%%%%%%%%%%%%%% Membership%%%%%%%%%%%%%%%%%
\newcommand{\cvmember}[2]{\begin{tabularx}{\textwidth}{X p{3.5cm}} {#2} & \RaggedLeft{#1}
    \end{tabularx}
}

%% Name definition %%
\newcommand{\name}[1]{\begin{flushleft}
	\LARGE \textbf{#1}
\end{flushleft}}
%% Current Position %%
\newcommand{\position}[1]{\begin{flushleft}
 \Large \textit{#1}
\end{flushleft}}
